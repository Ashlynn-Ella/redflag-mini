/* packageA/pages/login/index.wxss */

.login-box {
  width: 100%;
  height: 100vh;
  padding: 0 40rpx 120rpx;
}

.login-box image {
  width: 230rpx;
  height: 60rpx;
}

.ft-image image {
  width: 190rpx;
  height: 50rpx;
}

.input-box {
  width: 100%;
  background: #FFFFFF;
  box-shadow: 1px 2rpx 10rpx 3px rgba(0, 0, 2, 0.05);
  border-radius: 12rpx;
  padding: 80rpx 20rpx 100rpx;
}

.code-box {
  position: relative;
  margin-bottom: 80rpx;
}

.code-img {
  width: 240rpx;
  height: 55rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.code-img image {
  width: 100%;
  height: 100%;
}

.submit-box {
  padding: 0 30rpx;
}

.submit-inner {
  box-shadow: 1px 2px 10px 3px rgba(0, 0, 2, 0.05);
}

.info {
  text-align: center;
  color: #ADADAD;
  font-size: 24rpx;
}

.van-field__control {
  height: 70rpx !important;
}